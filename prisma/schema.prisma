generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_CONNECTION_STRING")
}

model Cron {
  id          Int          @id @unique @default(autoincrement())
  teamId      String
  channelId   String
  schedule    String
  name        String       @default("Unnamed")
  message     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime?    @default(now()) @updatedAt
  MembersCron MembersCron?
  TextCron    TextCron?
}

model MembersCron {
  id             Int       @id @unique @default(autoincrement())
  cron           Cron      @relation(fields: [cronId], references: [id], onDelete: Cascade)
  cronId         Int       @unique
  ignoredMembers String[]  @default([])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime? @default(now()) @updatedAt
}

model TextCron {
  id        Int       @id @unique @default(autoincrement())
  cron      Cron      @relation(fields: [cronId], references: [id], onDelete: Cascade)
  cronId    Int       @unique
  options   String[]
  createdAt DateTime  @default(now())
  updatedAt DateTime? @default(now()) @updatedAt
}
